<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.asremis.Activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="0dp"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="313dp"
            android:layout_height="@dimen/nav_header_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/logo" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/user_txt"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario/Email"
                android:inputType="textEmailAddress"
                android:textColorLink="@color/blue" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pass_text"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:textColorLink="@color/blue" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/pass_text"
            android:layout_alignLeft="@+id/pass_text"
            android:layout_alignRight="@+id/pass_text"
            android:layout_alignStart="@+id/pass_text"
            android:layout_below="@+id/pass_text"
            android:layout_marginTop="41dp"
            android:layout_weight="0.04"
            android:height="60dp"
            android:text="Iniciar"
            android:textColor="@color/whithe"
            app:backgroundTint="@color/blueClear" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_newacount"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/pass_text"
            android:layout_alignLeft="@+id/pass_text"
            android:layout_alignRight="@+id/pass_text"
            android:layout_alignStart="@+id/pass_text"
            android:layout_below="@+id/pass_text"
            android:layout_marginTop="1dp"
            android:height="60dp"
            android:text="No tengo una Cuenta!"
            android:textColor="@android:color/holo_red_light"
            app:backgroundTint="@color/cast_expanded_controller_progress_text_color" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="75dp"
        app:srcCompat="@mipmap/amazon" />

    <TextView
        android:id="@+id/lbl_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:text="0.0.0" />


</RelativeLayout>

