<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/place_autocomplete_prediction_primary_text"
    android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:baselineAligned="false"

            android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/cast_expanded_controller_ad_container_white_stripe_color">

                        <TextView
                            android:id="@+id/txt_mount"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"

                            android:paddingTop="10dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_margin="15dp"
                            android:text="0$"
                            android:textAlignment="center"
                            android:background="@color/place_autocomplete_prediction_secondary_text"
                            android:textColor="@color/succes"
                            android:textSize="80dp" />
                </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="0dp"
                            android:tint="@color/common_google_signin_btn_text_dark_default"
                            app:srcCompat="@drawable/ic_directions_black_24dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                        <TextView
                            android:id="@+id/distance_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"

                            android:ems="20"
                            android:hint=""
                            android:inputType="numberDecimal"
                            android:minHeight="50dp"
                            android:textAlignment="center"
                            android:background="@color/place_autocomplete_prediction_secondary_text"
                            android:textColor="@color/succes"
                            android:textSize="30dp" />

                </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="0dp"
                            android:tint="@color/common_google_signin_btn_text_dark_default"
                            app:srcCompat="@drawable/ic_access_time_black_40dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                        <TextView
                            android:id="@+id/txtTimeslep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"

                            android:ems="20"
                            android:hint=""
                            android:inputType="numberDecimal"
                            android:minHeight="50dp"
                            android:paddingTop="10dp"
                            android:textAlignment="center"
                            android:background="@color/place_autocomplete_prediction_secondary_text"
                            android:textColor="@color/succes"
                            android:textSize="30dp" />

                </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="0dp"
                            android:tint="@color/common_google_signin_btn_text_dark_default"
                            app:srcCompat="@drawable/ic_local_parking_black_40dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                        <EditText
                            android:id="@+id/peajes_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/CLEARINPUT"
                            android:ems="20"
                            android:hint=" Peaje"
                            android:inputType="numberDecimal"
                            android:minHeight="50dp"
                            android:textAlignment="center"
                            android:textColor="@color/place_autocomplete_search_text"
                            android:textSize="30dp" />

                </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="0dp"
                            android:tint="@color/common_google_signin_btn_text_dark_default"
                            app:srcCompat="@drawable/ic_directions_car_black_40dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                        <EditText
                            android:id="@+id/parkin_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:background="@color/CLEARINPUT"
                            android:ems="20"
                            android:hint=" Estacionamiento"
                            android:inputType="numberDecimal"
                            android:minHeight="50dp"
                            android:textAlignment="center"
                            android:textColor="@color/place_autocomplete_search_text"
                            android:textSize="30dp" />

                </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_gravity="bottom"
            android:baselineAligned="false"
            android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                        <Button
                            android:id="@+id/bnt_pay_car"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="top|center"
                            android:background="@drawable/circle"
                            android:drawableTop="@drawable/ic_media_pause"
                            android:paddingTop="20dp"
                            android:text="Tarjeta"
                            android:textColor="#fff"
                            android:tint="@color/colorPrimary"
                            app:layout_anchorGravity="bottom|left" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_firm_voucher"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="top|center"
                            android:background="@drawable/circle_btn_red"
                            android:drawableTop="@drawable/ic_collapse_00001"
                            android:paddingTop="20dp"
                            android:text="Firmar"
                            android:textColor="#fff"
                            app:layout_anchorGravity="bottom|left" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                        <Button
                            android:id="@+id/btn_pay_cash"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="top|center"
                            android:background="@drawable/circle_btn_gren"
                            android:drawableTop="@drawable/cast_ic_notification_forward"
                            android:paddingTop="20dp"
                            android:text="Efectivo"
                            android:textColor="#fff"
                            android:tint="@color/colorPrimary"
                            app:layout_anchorGravity="bottom|left" />
                </RelativeLayout>
        </LinearLayout>





</LinearLayout>