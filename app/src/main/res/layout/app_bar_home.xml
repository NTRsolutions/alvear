<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.apreciasoft.admin.asremis.Activity.HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>



    <include layout="@layout/content_home"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal"
        android:baselineAligned="false"

        android:layout_gravity="bottom|end"
        android:layout_weight="0.35">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top|center"
                android:background="@drawable/circle_btn_red"
                android:drawableTop="@drawable/ic_close_black_24dp"
                android:paddingTop="20dp"
                android:text="Cancelar"
                android:textColor="#fff"
                android:tint="@color/colorPrimary"
                app:layout_anchorGravity="bottom|left" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_init"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top|center"
                android:background="@drawable/circle"
                android:drawableTop="@drawable/ic_nature_people_black_24dp"
                android:paddingTop="20dp"
                android:text="Iniciar"
                android:textColor="#fff"
                app:layout_anchorGravity="bottom|left" />
        </RelativeLayout>

    </LinearLayout>


    <TextView

        android:id="@+id/textTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="180dp"
        android:background="@drawable/rounded_textview"
        android:textColor="@android:color/white"
        android:gravity="center" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:orientation="horizontal"
        android:baselineAligned="false"

        android:layout_gravity="bottom|end"
        android:layout_weight="0.35">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_iniTimeSlep"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top|center"
                android:background="@drawable/circle"
                android:drawableTop="@drawable/ic_timer_black_40dp"
                android:paddingTop="20dp"
                android:text="Espera"
                android:textColor="#fff"
                android:tint="@color/colorPrimary"
                app:layout_anchorGravity="bottom|left" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_pre_finish"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="top|center"
                android:background="@drawable/circle_btn_red"
                android:drawableTop="@drawable/ic_thumb_up_black_24dp"
                android:paddingTop="20dp"
                android:textSize="12dp"
                android:text="Finalizar"
                android:textColor="#fff"
                app:layout_anchorGravity="bottom|left"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_return"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top|center"
                android:background="@drawable/circle"
                android:drawableTop="@drawable/ic_autorenew_black_24dp"
                android:paddingTop="20dp"
                android:text="Vuelta"
                android:textColor="#fff"
                android:tint="@color/colorPrimary"
                app:layout_anchorGravity="bottom|left" />
        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/payment"
        layout="@layout/payment_layout" />

</android.support.design.widget.CoordinatorLayout>
