<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.apreciasoft.admin.asremis.Activity.HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>



    <include layout="@layout/content_home"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"

        android:layout_gravity="bottom|end"
        android:layout_weight="0.35">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_cancel"
                android:background="@drawable/buton_round_red"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="4dp"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/whithe"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="RECHAZAR"
                app:layout_anchorGravity="bottom|left"
                android:drawableLeft="@drawable/ic_phonelink_erase_black_24dp" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <Button
                android:id="@+id/btn_init"
                android:padding="4dp"
                android:layout_margin="5dp"
                android:background="@drawable/buton_round_dark"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/whithe"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="INICIAR"
                app:layout_anchorGravity="bottom|left"
                android:drawableLeft="@drawable/ic_nature_people_black_24dp" />



        </RelativeLayout>

    </LinearLayout>


    <TextView

        android:id="@+id/textTiempo"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_marginLeft="-20dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/rounded_border_textview_time"
        android:textColor="@color/succes"
        android:gravity="center" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"

        android:layout_gravity="bottom|end"
        android:layout_weight="0.35">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <Button
                android:id="@+id/btn_iniTimeSlep"
                android:padding="4dp"
                android:layout_margin="5dp"
                android:background="@drawable/buton_round_dark"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/whithe"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Espera"
                app:layout_anchorGravity="bottom|left"
                android:drawableLeft="@drawable/ic_timer_black_40dp" />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <Button
                android:id="@+id/btn_pre_finish"
                android:padding="4dp"
                android:layout_margin="5dp"
                android:background="@drawable/buton_round_red"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/whithe"
                android:textStyle="bold"
                android:textSize="10dp"
                android:text="Finalizar"
                app:layout_anchorGravity="bottom|left"
                android:drawableLeft="@drawable/ic_thumb_up_black_24dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <Button
                android:id="@+id/btn_return"
                android:padding="4dp"
                android:layout_margin="5dp"
                android:background="@drawable/buton_round_dark"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/whithe"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Vuelta"
                app:layout_anchorGravity="bottom|left"
                android:drawableLeft="@drawable/ic_autorenew_black_24dp" />
        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/payment"
        layout="@layout/payment_layout" />

</android.support.design.widget.CoordinatorLayout>
